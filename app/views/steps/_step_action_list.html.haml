%table.table
  %thead
    %tr
      %th.col-md-2
        %h2
          Type
      %th.col-md-5
        %h2
          Content
      %th.col-md-2
        %h2
          Score
      %th
        // buttons
  %tbody{id: 'editable_list'}
    - @step_actions.each do |step_action|
      - if step_action.type == 'Question'
        %tr{id: "question_#{step_action.id}", class: 'editable-item question'}
          = render 'steps/question_list_item', question: step_action
      - elsif step_action.type == 'Instruction'
        %tr{id: "instruction_#{step_action.id}", class: 'editable-item instruction'}
          = render 'steps/instruction_list_item', instruction: step_action
